<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-3">
        <i class="fas fa-user-plus"></i> Register
      </h1>
      <%- include ('../partials/messages') %>
      <form action="/register" method="POST">
        <div class="form-group">
          <label for="firstName">First Name</label>
          <input type="name" id="firstName" name="firstName" class="form-control" placeholder="Enter First Name"
            value="<%= typeof firstName != 'undefined' ? firstName : '' %>" />
        </div>
        <div class="form-group">
          <label for="lastName">Last Name</label>
          <input type="name" id="lastName" name="lastName" class="form-control" placeholder="Enter Last Name"
            value="<%= typeof lastName != 'undefined' ? lastName : '' %>" />
        </div>
        <div class="form-group">
          <label for="birthDate">Birth Date</label>
          <input type="date" id="birthDate" name="birthDate" class="form-control" placeholder="Enter Last Name"
            value="<%= typeof birthDate != 'undefined' ? birthDate : '' %>" />
        </div>
        <div class="form-group">
          <label for="email">Email</label>
          <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email"
            value="<%= typeof email != 'undefined' ? email : '' %>" />
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input type="password" id="password" name="password" class="form-control" placeholder="Enter password"
            value="<%= typeof password != 'undefined' ? password : '' %>" />
        </div>
        <div class="form-group">
          <label for="password2">Confirm Password</label>
          <input type="password" id="password2" name="password2" class="form-control" placeholder="Confirm Password"
            value="<%= typeof password2 != 'undefined' ? password2 : '' %>" />
        </div>
        <div class="form-group">
          <label for="weight">Weight</label>
          <input type="text" id="weight" name="weight" class="form-control"
            placeholder="Competition Weight in Kilograms" value="<%= typeof weight != 'undefined' ? weight : '' %>" />
        </div>
        <div class="form-group">
          <label for="school">School</label>
          <input type="text" id="school" name="school" class="form-control" placeholder="Enter School Name"
            value="<%= typeof school != 'undefined' ? school : '' %>" />
        </div>
        <div class="form-group">
          <p>Select Your Gender:</p>
          <select name="gender">
            <option value="M">Male</option>
            <option value="F">Female</option>
          </select>
        </div>
        <div class="form-group">
          <p>Select Your NoGi Experience:</p>
          <select name="nogi">
            <option value="1200">Under 1 Year</option>
            <option value="1425">Between 1-2 Years</option>
            <option value="1650">Between 2-3 Years</option>
            <option value="1875">Between 3-5 Years</option>
            <option value="2100">Over 5 years</option>
            <option value=null>I will not compete in NoGi</option>
          </select>
        </div>
        <div class="form-group">
          <p>Select Your NoGi Experience:</p>
          <select name="gi">
            <option value="1200">White</option>
            <option value="1425">Blue</option>
            <option value="1650">Purple</option>
            <option value="1875">Brown</option>
            <option value="2100">Black</option>
            <option value=null>I will not compete in Gi</option>
          </select>
        </div>

        <button type="submit" class="btn btn-primary btn-block">
          Register
        </button>
      </form>
      <p class="lead mt-4">Have An Account? <a href="/login">Login</a></p>
    </div>
  </div>
</div>